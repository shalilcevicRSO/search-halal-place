<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="search-halal-place-jpa" transaction-type="RESOURCE_LOCAL">
        <non-jta-data-source>jdbc/SearchHalalPlaceDS</non-jta-data-source>

        <class>com.selma.halal.food.project.models.entities.SearchPlaceMetadataEntity</class>
        <class>com.selma.halal.food.project.models.converters.InstantAttributeConverter</class>

        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="create"/>
            <property name="javax.persistence.schema-generation.create-source" value="metadata"/>
            <property name="javax.persistence.sql-load-script-source"
                      value="sql-scripts/init.sql" />
            <property name="javax.persistence.schema-generation.drop-source" value="metadata"/>
        </properties>
    </persistence-unit>
</persistence>
